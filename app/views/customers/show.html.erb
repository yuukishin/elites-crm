<div class="row">
    <div class="col-lg-12">
        <h1>顧客詳細</h1>
        <dl>
            <dt>お名前</dt>
            <!--<dd style="margin:0px 0px 10px 20px"><%= @customer.family_name %> <%= @customer.given_name %></dd>-->
            <dd style="margin:0px 0px 10px 20px"><%= @customer.full_name %></dd>
            <dt>電子メール</dt>
            <dd style="margin:0px 0px 10px 20px"><%= @customer.email %></dd>
            <dt>会社名</dt>
